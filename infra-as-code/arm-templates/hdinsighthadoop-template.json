{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "0.9.0.0",
    "parameters": {
        "clusterName": {
            "type": "string",
            "metadata": {
                "description": "The name of the HDInsight cluster to create."
            }
        },
        "resourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "Used to pass the subnet vnet profile"
            }
        },
        "clusterLoginUserName": {
            "type": "string",
            "defaultValue": "admin",
            "metadata": {
                "description": "These credentials can be used to submit jobs to the cluster and to log into cluster dashboards."
            }
        },
        "clusterLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "eastus",
            "metadata": {
                "description": "The location where all azure resources will be deployed."
            }
        },
        "clusterVersion": {
            "type": "string",
            "defaultValue": "3.6",
            "metadata": {
                "description": "HDInsight cluster version."
            }
        },
        "clusterWorkerCountMin": {
            "type": "int",
            "defaultValue": 5,
            "metadata": {
                "description": "The minimum number of nodes in the HDInsight cluster."
            }
        },
        "clusterWorkerCountMax": {
            "type": "int",
            "defaultValue": 10,
            "metadata": {
                "description": "The maximum number of nodes in the HDInsight cluster."
            }
        },
        "clusterWorkerNodeSize": {
            "type": "string",
            "defaultValue": "Standard_F4",
            "metadata": {
                "description": "The default size of the nodes in the HDInsight cluster."
            }
        },
        "clusterKind": {
            "type": "string",
            "defaultValue": "HADOOP",
            "metadata": {
                "description": "The type of the HDInsight cluster to create."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "virtual network to place the HDInsight within"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet for the HDInsight clusters"
            }
        },
        "sshUserName": {
            "type": "string",
            "defaultValue": "sshuser",
            "metadata": {
                "description": "These credentials can be used to remotely access the cluster."
            }
        },
        "sshPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
            }
        },
        "minTlsVersionNumber": {
            "type": "string",
            "defaultValue": "1.2"
        },
        "containerName": {
            "type": "string",
            "metadata": {
                "description": "The blob container name"
            }
        },
        "listKeys": {
            "type": "string",
            "metadata": {
                "description": "The string to list keys"
            }
        },
        "storageAccountLong": {
            "type": "string",
            "metadata": {
                "description": "The url used to access the Storage Account"
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2015-03-01-preview",
            "name": "[parameters('clusterName')]",
            "type": "Microsoft.HDInsight/clusters",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "clusterVersion": "[parameters('clusterVersion')]",
                "osType": "Linux",
                "tier": "standard",
                "clusterDefinition": {
                    "kind": "[parameters('clusterKind')]",
                    "componentVersion": {
                        "Hadoop": "2.7"
                    },
                    "configurations": {
                        "gateway": {
                            "restAuthCredential.isEnabled": true,
                            "restAuthCredential.username": "[parameters('clusterLoginUserName')]",
                            "restAuthCredential.password": "[parameters('clusterLoginPassword')]"
                        }
                    }
                },
                "storageProfile": {
                    "storageaccounts": [
                        {
                            "name": "[parameters('storageAccountLong')]",
                            "isDefault": true,
                            "container": "[parameters('containerName')]",
                            "key": "[parameters('listKeys')]"
                        }
                    ]
                },
                "computeProfile": {
                    "roles": [
                        {
                            "autoscale": null,
                            "name": "headnode",
                            "minInstanceCount": 1,
                            "targetInstanceCount": 2,
                            "hardwareProfile": {
                                "vmSize": "Standard_D12_V2"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('sshUserName')]",
                                    "password": "[parameters('sshPassword')]"
                                },
                                "windowsOperatingSystemProfile": null
                            },
                            "virtualNetworkProfile": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
                                "subnet": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('subnetName'))]"
                            },
                            "scriptActions": [],
                            "dataDisksGroups": null
                        },
                        {
                            "autoscale": {
                                "capacity": {
                                    "minInstanceCount": "[parameters('clusterWorkerCountMin')]",
                                    "maxInstanceCount": "[parameters('clusterWorkerCountMax')]"
                                },
                                "recurrence": null
                            },
                            "name": "workernode",
                            "targetInstanceCount": 5,
                            "hardwareProfile": {
                                "vmSize": "[parameters('clusterWorkerNodeSize')]"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('sshUserName')]",
                                    "password": "[parameters('sshPassword')]"
                                },
                                "windowsOperatingSystemProfile": null
                            },
                            "virtualNetworkProfile": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
                                "subnet": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('subnetName'))]"
                            },
                            "scriptActions": [],
                            "dataDisksGroups": null
                        },
                        {
                            "autoscale": null,
                            "name": "zookeepernode",
                            "minInstanceCount": 1,
                            "targetInstanceCount": 3,
                            "hardwareProfile": {
                                "vmSize": "Small"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('sshUserName')]",
                                    "password": "[parameters('sshPassword')]"
                                },
                                "windowsOperatingSystemProfile": null
                            },
                            "virtualNetworkProfile": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
                                "subnet": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('subnetName'))]"
                            },
                            "scriptActions": [],
                            "dataDisksGroups": null
                        }
                    ]
                },
                "minSupportedTlsVersion": "[parameters('minTlsVersionNumber')]"
            }
        }
    ]
}