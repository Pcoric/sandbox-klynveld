{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "kvname": {
            "type": "string"
        },
        "saname": {
            "type": "string"
        },
        "secretname": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "createMode": {
            "type": "string",
            "defaultValue": "default"
        },
        "accountSasProperties": {
            "type": "object",
            "defaultValue": {
                "signedServices": "b",
                "signedPermission": "rw",
                "signedExpiry": "2020-10-10T00:00:01Z",
                "signedResourceTypes": "o",
                "keyToSign": "bentleyhack"
            }
        }
    },
    "variables": {},
    "resources": [{
        "type": "Microsoft.KeyVault/vaults",
        "name": "[parameters('kvname')]",
        "apiVersion": "2018-02-14",
        "location": "[parameters('location')]",
        "tags": {},
        "scale": null,
        "properties": {
            "sku": {
                "family": "A",
                "name": "standard"
            },
            "tenantId": "[subscription().tenantId]",
            "createMode": "[parameters('createMode')]",
            "enabledForTemplateDeployment": true,
            "accessPolicies": []
        }
    },
    {
        "apiVersion": "2018-02-14",
        "type": "Microsoft.KeyVault/vaults/secrets",
        "dependsOn": [
            "[concat('Microsoft.KeyVault/vaults/', parameters('kvname'))]"
        ],
        "name": "[concat(parameters('kvname'), '/', parameters('secretname'))]",
        "properties": {
            "value": "[listAccountSas(resourceId('Microsoft.Storage/storageAccounts', parameters('saname')), '2018-07-01', parameters('accountSasProperties')).accountSasToken]"
        }
    }]
}